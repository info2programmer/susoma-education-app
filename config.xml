<?xml version='1.0' encoding='utf-8'?>
<widget id="com.susomaias" version="0.2.5" xmlns="http://www.w3.org/ns/widgets" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Cross</name>
    <description>
        INSTITUTION DEDICATED FOR ART AND CULTURE
    </description>
    <author email="projuktiitcompany@gmail.com" href="http://projukti.info">
        Team Projukti
    </author>
    <content src="index.html" />
    <gap:config-file parent="/manifest" platform="android">
        <application android:theme="@android:style/Theme.Wallpaper">
            <activity android:theme="@android:style/Theme.Wallpaper">
            </activity>
        </application>
    </gap:config-file>
    <preference name="DisallowOverscroll" value="false" />
    <preference name="android-minSdkVersion" value="14" />
    <preference name="AndroidPersistentFileLocation" value="Compatibility" />
    <preference name="Fullscreen" value="false" />
    <preference name="Orientation" value="portrait" />
    <preference name="StatusBarOverlaysWebView" value="true" />
    <preference name="StatusBarStyle" value="lightcontent" />
    <preference name="StatusBarBackgroundColor" value="#0c83c8" />
    <preference name="phonegap-version" value="cli-8.0.0" />
    <preference name="AndroidPersistentFileLocation" value="Compatibility" />
    <preference name="SplashScreenDelay" value="6000" />
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="AndroidExtraFilesystems" value="files,files-external,documents,sdcard,cache,cache-external,assets,root" />
    <platform name="android">
        <preference name="StatusBarOverlaysWebView" value="true" />
        <preference name="StatusBarStyle" value="lightcontent" />
        <preference name="StatusBarBackgroundColor" value="#4cd964" />
        <preference name="android-minSdkVersion" value="21" />
        <preference name="SplashMaintainAspectRatio" value="true" />
        <splash density="land-hdpi" src="www/res/screen/android/drawable-hdpi/screen.png" />
        <splash density="land-mdpi" src="www/res/screen/android/drawable-mdpi/screen.png" />
        <splash density="land-xhdpi" src="www/res/screen/android/drawable-xhdpi/screen.png" />
        <splash density="land-xxhdpi" src="www/res/screen/android/drawable-xxhdpi/screen.png" />
        <splash density="land-xxxhdpi" src="www/res/screen/android/drawable-xxxhdpi/screen.png" />
        <splash density="port-hdpi" src="www/res/screen/android/drawable-hdpi/screen.png" />
        <splash density="port-mdpi" src="www/res/screen/android/drawable-mdpi/screen.png" />
        <splash density="port-xhdpi" src="www/res/screen/android/drawable-xhdpi/screen.png" />
        <splash density="port-xxhdpi" src="www/res/screen/android/drawable-xxhdpi/screen.png" />
        <splash density="port-xxxhdpi" src="www/res/screen/android/drawable-xxxhdpi/screen.png" />
        <icon density="ldpi" src="www/res/icon/android/mipmap-ldpi/ic_launcher.png" />
        <icon density="mdpi" src="www/res/icon/android/mipmap-mdpi/ic_launcher.png" />
        <icon density="hdpi" src="www/res/icon/android/mipmap-hdpi/ic_launcher.png" />
        <icon density="xhdpi" src="www/res/icon/android/mipmap-xhdpi/ic_launcher.png" />
        <icon density="xxhdpi" src="www/res/icon/android/mipmap-xxhdpi/ic_launcher.png" />
        <icon density="xxxhdpi" src="www/res/icon/android/mipmap-xxxhdpi/ic_launcher.png" />
    </platform>
    <access origin="*" />
    <access subdomains="true" uri="*" />
    <allow-navigation href="*" />
    <allow-navigation href="http://*/*" />
    <allow-navigation href="https://*/*" />
    <allow-navigation href="data:*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <edit-config
        file="app/src/main/AndroidManifest.xml"
        mode="merge"
        target="/manifest/application"
    >
        <application android:largeHeap="true" />
    </edit-config>
    </platform>
    <engine name="ios" />
    <plugin name="cordova-plugin-battery-status" spec="~1.2.4" />
    <plugin name="cordova-plugin-camera" spec="~2.4.1">
        <variable name="CAMERA_USAGE_DESCRIPTION" value="GURUSIKSHA app reqiires access to the CAMERA" />
        <variable name="PHOTOLIBRARY_USAGE_DESCRIPTION" value="GURUSIKSHA app reqiires access to the PHOTOLIBRARY." />
    </plugin>
    <plugin name="cordova-plugin-dialogs" spec="~1.3.3" />
    <plugin name="cordova-plugin-geolocation" spec="~2.4.3" />
    <plugin name="cordova-plugin-globalization" spec="~1.0.7" />
    <plugin name="cordova-plugin-inappbrowser" spec="~1.7.1" />
    <plugin name="cordova-plugin-network-information" spec="~1.3.3" />
    <plugin name="cordova-plugin-vibration" spec="~2.1.5" />
    <plugin name="cordova-plugin-statusbar" spec="^2.4.2" />
    <plugin name="cordova-plugin-splashscreen" spec="^5.0.2" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="cordova-plugin-customurlscheme" spec="~4.3.0">
        <variable name="URL_SCHEME" value="gurusiksha" />
    </plugin>
    <plugin name="cordova-plugin-x-socialsharing" spec="^5.4.3" />
    <plugin name="cordova-plugin-file" spec="^6.0.1" />
    <plugin name="cordova-plugin-file-transfer" spec="^1.7.1" />
    <plugin name="cordova-plugin-zip" spec="^3.1.0" />
    <plugin name="cordova-plugin-media-capture" spec="^3.0.2" />
    <plugin name="cordova-plugin-code-push" spec="~1.11.2" />
    <plugin name="cordova-plugin-document-viewer" spec="^0.9.10" />
    <plugin name="cordova-plugin-device" spec="^2.0.2" />
    <plugin name="cordova-plugin-youtube-video-player" spec="^2.3.0" />
    <plugin name="cordova-clipboard" spec="^1.2.1" />
    <plugin name="cordova-plugin-sms-receive" spec="^1.0.2" />
    <engine name="android" spec="6.2.3" />
    <plugin name="cordova-plugin-chooser" />
    <plugin name="cordova-plugin-spinner" />
    <plugin name="cordova-plugin-appversion" />
</widget>